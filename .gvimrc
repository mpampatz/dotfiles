"
" ~/.gvimrc
"

" Window positioning
set lines=50 columns=84
" winpos 0 0 

" Kinda theme...
set guifont=Monospace\ 10
color wolfpack

" Remove toolbar and scrolbars
set guioptions-=T 
set guioptions-=r 
set guioptions-=R 
set guioptions-=l
set guioptions-=L

" Hide mouse when typing text
set mousehide   
